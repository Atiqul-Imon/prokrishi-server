# Production Environment Variables for Prokrishi Backend
# Copy this file to .env and fill in your actual values
# For Digital Ocean Droplet deployment

# ===========================================
# Server Configuration
# ===========================================
PORT=3500
NODE_ENV=production

# ===========================================
# Database Configuration
# ===========================================
# MongoDB Atlas connection string
# Get this from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/prokrishi?retryWrites=true&w=majority

# ===========================================
# JWT Configuration
# ===========================================
# Generate secure random strings (min 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_very_secure_jwt_refresh_secret_key_here_min_32_chars

# ===========================================
# CORS Configuration
# ===========================================
# Your frontend domain (e.g., https://prokrishihub.com)
CORS_ORIGIN=https://prokrishihub.com,https://www.prokrishihub.com
FRONTEND_URL=https://prokrishihub.com

# Your backend domain (e.g., https://api.prokrishihub.com)
BACKEND_URL=https://api.prokrishihub.com

# ===========================================
# Cookie Configuration
# ===========================================
# Generate secure random string (min 32 characters)
COOKIE_SECRET=your_very_secure_cookie_secret_here_min_32_chars

# ===========================================
# ImageKit Configuration (Image Management)
# ===========================================
# Get these from: https://imagekit.io/dashboard
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# ===========================================
# SSL Commerz Configuration (Payment Gateway)
# ===========================================
# Required for payment processing in Bangladesh
# Get these from: https://sslcommerz.com
SSL_STORE_ID=your_ssl_store_id
SSL_STORE_PASSWORD=your_ssl_store_password

# ===========================================
# Email Configuration (Optional)
# ===========================================
# Required for password reset and notifications
# For Gmail, use app password: https://support.google.com/accounts/answer/185833
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password

# ===========================================
# Redis Configuration (Optional)
# ===========================================
# For caching and performance optimization
# Get free Redis from: https://redis.io or https://upstash.com
# Leave empty if not using Redis
REDIS_URL=

# ===========================================
# Security Configuration (Optional)
# ===========================================
# Rate limiting and security settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
